{
  "name": "stream-droplets",
  "version": "1.0.0",
  "description": "Points tracking system for Stream Protocol vaults",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && cd frontend && npm install && npm run build",
    "build:railway": "npm install && npm run build && npm run db:migrate:prod",
    "start": "node dist/scripts/deploy-startup.js",
    "start:prod": "tsx scripts/railway-start.ts",
    "start:prod:full": "tsx scripts/deploy-startup.ts",
    "db:migrate": "knex migrate:latest --knexfile src/db/knexfile.ts",
    "db:migrate:prod": "knex migrate:latest --knexfile dist/db/knexfile.js --env production",
    "db:rollback": "knex migrate:rollback --knexfile src/db/knexfile.ts",
    "db:seed": "knex seed:run --knexfile src/db/knexfile.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "indexer": "tsx src/indexer/index.ts",
    "api": "tsx src/api/server.ts",
    "frontend": "cd frontend && npm run dev",
    "backfill": "tsx scripts/backfill.ts",
    "validate": "tsx scripts/validate.ts"
  },
  "keywords": [
    "stream",
    "droplets",
    "points",
    "indexer",
    "defi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "fastify": "^4.26.1",
    "knex": "^3.1.0",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "playwright": "^1.55.0",
    "viem": "^2.7.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
