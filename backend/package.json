{
  "name": "stream-droplets",
  "version": "1.0.0",
  "description": "Points tracking system for Stream Protocol vaults",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "build:railway": "npm install && npm run build && npm run db:migrate:prod",
    "start": "node start.js",
    "start:simple": "node dist/simple-server.js",
    "start:full": "node dist/scripts/production-deploy.js",
    "cli": "tsx src/cli/index.ts",
    "cli:prod": "node dist/cli/index.js",
    "db:migrate": "knex migrate:latest --knexfile src/db/knexfile.ts",
    "db:migrate:prod": "knex migrate:latest --knexfile dist/db/knexfile.js --env production",
    "db:rollback": "knex migrate:rollback --knexfile src/db/knexfile.ts",
    "db:seed": "knex seed:run --knexfile src/db/knexfile.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "indexer:start": "tsx src/cli/index.ts indexer start",
    "indexer:status": "tsx src/cli/index.ts indexer status",
    "api": "tsx src/api/server.ts",
    "backfill": "tsx src/cli/index.ts backfill run",
    "droplets": "tsx src/cli/index.ts droplets",
    "validate": "tsx scripts/validate.ts",
    "validate:impl": "tsx src/scripts/validate-implementation.ts",
    "test:db": "tsx scripts/test-db.ts",
    "debug:railway": "tsx scripts/railway-debug.ts"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "stream",
    "droplets",
    "points",
    "indexer",
    "defi"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5",
    "commander": "^10.0.1",
    "dotenv": "^16.4.5",
    "ethers": "^6.11.1",
    "fastify": "^4.26.1",
    "knex": "^3.1.0",
    "ora": "^5.4.1",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "playwright": "^1.55.0",
    "viem": "^2.7.0",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@types/pg": "^8.11.2",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}
