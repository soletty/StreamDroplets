{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd backend && chmod +x scripts/build-railway.sh && ./scripts/build-railway.sh"
  },
  "deploy": {
    "startCommand": "cd backend && node start-simple.js",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3,
    "healthcheckPath": "/api/v1/health",
    "healthcheckTimeout": 90
  },
  "services": [
    {
      "name": "api",
      "source": ".",
      "builder": "NIXPACKS",
      "buildCommand": "npm run build:railway",
      "startCommand": "npm run start:prod",
      "envVars": {
        "NODE_ENV": "production",
        "ETH_START_BLOCK": "20000000",
        "SONIC_START_BLOCK": "40000000",
        "DEPLOY_MODE": "full",
        "PORT": "8080"
      }
    }
  ]
}